<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Add configuration fields to the general settings view-->
        <record id="res_config_settings_view_form_louet" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.louet</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="production_lot_info" position="after">
                    <h2>Shipping Broker Report</h2>
                    <div class="row mt16 o_settings_container" id="stock_ftp_settings">
                        <div class="col-12 col-lg-6 o_setting_box"
                             title="This allows you set to the email address for the Shipping Broker">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Email</span>
                                <div class="text-muted">
                                    Send shipping information as csv
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="email_broker" class="col-lg-3 o_light_label"/>
                                        <field name="email_broker"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
